# This file contains common system config stuff for different platforms.

if (is_android) {
  if (!defined(default_android_sdk_root)) {
    default_android_sdk_root = getenv("ANDROID_SDK_HOME")
    default_android_sdk_version = "21"
    default_android_sdk_build_tools_version = "21.1.2"
  }

  if (!defined(default_android_ndk_root)) {
    default_android_ndk_root = getenv("ANDROID_NDK_HOME")
  }
}

